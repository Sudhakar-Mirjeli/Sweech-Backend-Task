generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id        String        @id @default(uuid())
  email     String        @unique
  password  String
  username  String
  createdAt DateTime      @default(now())

  posts     Post[]
  comments  Comment[]
  logins    LoginRecord[]

  @@map("member")
}

model Post {
  id        String    @id @default(uuid())
  title     String    @db.VarChar(30)
  content   String    @db.VarChar(1000)
  createdAt DateTime  @default(now())
  userId    String
  comments Comment[]
  user      Member    @relation(fields: [userId], references: [id])
}

model Comment {
  id        String    @id @default(uuid())
  content   String    @db.VarChar(500)
  createdAt DateTime  @default(now())
  userId    String
  postId    String
  user      Member    @relation(fields: [userId], references: [id])
  post      Post      @relation(fields: [postId], references: [id])
}

model LoginRecord {
  id        String    @id @default(uuid())
  userId    String?   
  ipAddress String
  loginAt   DateTime
  user      Member?   @relation(fields: [userId], references: [id], onDelete: SetNull)
}